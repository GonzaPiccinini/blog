---
import { Image } from "astro:assets";
import image from "../assets/images/redmiactive.webp";
import Calendar from "../svg/Calendar.astro";

const data = {
  author: "Gonzalo Piccinini",
  date: new Date(),
  title: "Unboxing & Review de los nuevos Xiaomi Redmi Buds Active 4",
  category: "Reviews",
  img: {
    src: image,
    alt: "post-card-image",
  },
};

const { frontmatter } = Astro.props;
---

<article class="postCard">
  <Image class="postCard__image" src={data.img.src} alt={data.img.alt} />
  <div class="postCard__text-container">
    <p class="postCard__category">
      <span class="text-green">‚óè </span>
      {data.category}
    </p>
    <h3 class="postCard__title">{data.title}</h3>
    <div class="postCard__date-container">
      <Calendar width="20px" />
      <p>
        {data.date.getDay()}/{data.date.getMonth()}/{data.date.getFullYear()}
      </p>
    </div>
  </div>
</article>

<style>
  .postCard {
    max-width: 500px;
    border-radius: 10px;
    box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.1);
    transition: all 0.15s;

    &:hover {
      opacity: 0.8;
      cursor: pointer;
    }
  }
  .postCard__image {
    width: 100%;
    height: auto;
    border-top-right-radius: 10px;
    border-top-left-radius: 10px;
  }

  .postCard__text-container {
    padding: 0 10px 20px 10px;
  }
  .postCard__title {
    text-wrap: pretty;
  }
  .postCard__category {
    width: max-content;
    padding: 3px 5px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 30px;
  }
  .postCard__date-container {
    display: flex;
    align-items: center;
    justify-content: baseline;
    gap: 5px;
    height: 20px;
  }
</style>
